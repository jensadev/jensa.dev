{% extends 'pages/page.njk' %}

{% block content %}
<main id="main-content" tabindex="-1" class="region">
    <article class="content">
        {% if projectsData %}
        <ul class="grid" data-layout="50-50" data-rows="masonry" role="list">
            {% for project in projectsData %}
            <li class="card" data-clickable="true">
                {% if project.thumb %}
                <img src="/assets/thumbs/{{ project.thumb }}" alt="Bild fÃ¶r projektet {{ project.title }}" />
                {% endif %}
                <div class="card-body flow">
                    <h3>
                      <a href="{% if page.lang == 'en' %}/sv/projekt/{{ project.title | slug }}{% else %}{{ project.title | slug }}{% endif %}">
                            {{ project.title }}
                        </a>
                    </h3>
                    <p>{{ project.description }}</p>
                </div>
            </li>
            {% endfor %}
        </ul>
        {% endif %}
    </article>
</main>
{% endblock %}