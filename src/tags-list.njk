---
title: Alla taggar
permalink: /tags/
---

{% extends 'layouts/base.njk' %}

{% set introHeading = title %}

{% block content %}
    <main id="main-content" tabindex="-1">
        <section class="container">
                {% include "partials/components/header.njk" %}
                <ol class="tag-cloud">
                    {% for tag in collections.tagList %}
                        {% set tagUrl %}/tag/{{ tag | slug }}/{% endset %}
                            <li class="{{ collections[tag].length | tagCountCss }}">
                                <a href="{{ tagUrl | url }}">{{ tag | capitalize }}</a>
                                {{ collections[tag].length }}
                            </li>
                    {% endfor %}
                </ol>
        </section>
    </main>
{% endblock %}