{% extends 'layouts/base.njk' %}

{% set colors = ["orange", "red", "blue", "yellow", "purple", "green"] %}

{% block content %}
    <main id="main-content" tabindex="-1">
        <section class="content container flow">
            <aside class="content__info">
                <p>HÃ¤r hittar du ett fluffigt moln med alla taggar.</p>
            </aside>
            <ul class="tag-cloud" data-show-value>
                {% for tag in collections.tagList %}
                    {% set tagUrl %}/tagg/{{ tag | slug }}/{% endset %}
                        <li>
                            <a class="{{ colors | random }}" data-weight="{{ collections[tag].length }}" href="{{ tagUrl | url }}">{{ tag | capitalize }}</a>
                            <!-- {{ collections[tag].length }} -->
                        </li>
                {% endfor %}
            </ul>
        </section>
    </main>
{% endblock %}