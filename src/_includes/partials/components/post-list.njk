{% if postListItems.length %}
    <ol class="post-list">
        {% for item in postListItems %}
            <li>
                <time class="h4" datetime="{{ item.date | htmlDateString }}">
                    {{ item.date | readableDate }}
                </time>
                {% if item.data.update %}
                <span class="post-list__list-item--updated">(uppdaterad 
                    <time datetime="{{ item.data.update | htmlDateString }}">
                        {{ item.data.update | readableDate }}
                    </time>)
                </span>
                {% endif %}
                <h3>
                    <a href="{{ item.url }}" rel="bookmark">{{ item.data.title }}</a>
                </h3>
            </li>
        {% endfor %}
    </ol>
{% endif %}