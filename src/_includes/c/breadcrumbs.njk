{% if category or tags %}
<div class="breadcrumbs">
    {% if category %}
    <h2>
        {% if category == "resurser" %}
            <a href="/{{ category }}">{{ category }}</a>
        {% else %}
            {{ category }}
        {% endif %}
    </h2>
    {% endif %}
    {% if tags %}
    <ul class="tags">
        {% for tag in tags | sort %}
        <li>
            <a href="/tagg/{{ tag | slugify }}">
                {{ tag }}
            </a>
        </li>
        {% endfor %}
    </ul>
    {% endif %}
</div>
{% endif %}