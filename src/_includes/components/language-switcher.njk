<nav class="language-switcher">
  <a href="{{ page.url }}" lang="{{ page.lang | trim }}" hreflang="{{ page.lang }}" class="active">{{ page.lang }}</a>
  {% if page.url and page.url is string and "tag" not in page.url %}
    {% for link in page.url | locale_links %}
    <a href="{{ link.url }}" lang="{{ link.lang }}" hreflang="{{ link.lang }}">{{ link.lang }}</a>
    {% endfor %}
  {% endif %}
</nav>