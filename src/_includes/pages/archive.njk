{% extends 'pages/base.njk' %}
{%- from 'layouts/post-list/macro.njk' import postList -%}
{% set postListItems = collections.posts | reverse %}

{% set year = postListItems[0].date | yearString %}
{% set years = [year] %}

{% block header %}

{% endblock %}

{% block content %}
<main id="main-content" tabindex="-1">
    <section class="content container flow">
        {% if postListItems.length %}
        {{
            postList({
                items: postListItems,
                displayYears: years
            })
        }}
        {% endif %}
    </section>
</main>
{% endblock %}