{% extends 'pages/base.njk' %}
{%- from 'layouts/post-list/macro.njk' import postList -%}
{% set postListItems = collections.posts %}

{% block content %}
<main id="main-content" tabindex="-1">
    <section class="content container flow" style="padding-top: 0;">
        {% if postListItems.length %}
        {{
            postList({
                items: postListItems,
                displayYears: true
            })
        }}
        {% endif %}
    </section>
</main>
{% endblock %}