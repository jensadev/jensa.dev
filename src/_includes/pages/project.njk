{% extends 'pages/base.njk' %}

{% set project = projectsData | getProject(title) %}

{% block content %}
<main id="main-content" tabindex="-1" class="container region">
    <article class="flow">
        <ul class="card">
            <li>
                <span>Titel:</span> {{ project.title }}
            </li>
            <li>
                <span>Start:</span> <time datetime="{{ project.start | htmlDateString }}">{{ project.start | frontDate
                    }}</time>
            </li>
            <li>
                <span>Status:</span> {{ project.status }}
            </li>
            <li>
                <span>URL:</span> <a href="{{ project.url | url }}" target="_blank">{{ project.url }}</a>
            </li>
            <li>
                <span>Git:</span> <a href="{{ project.git | url }}" target="_blank">{{ project.git }}</a>
            </li>
        </ul>
        {{ content | safe }}
    </article>
</main>
{% endblock %}