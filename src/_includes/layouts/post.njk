---
layout: layouts/base.njk
---
{# Intro content #}
{% set introHeading = title %}

<article class="post">
    {% include "../components/intro.njk" %}
    <div class="container">
        {{ content | safe }}
    </div>
    {% if tags %}
    <footer class="post-footer">
        <div class="container">
            <ul class="tag-list">
                {% for tag in tags %}
                <li class="tag-item">
                    <a href="/tags/{{ tag }}">{{ tag | capitalize }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
    </footer>
    {% endif %}
</article>