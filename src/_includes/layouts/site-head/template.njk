{%- from '../nav/macro.njk' import nav -%}
{% set c = "" %}
<header class="site-head">
    <div class="site-head__inner container">
        {{ nav({
        siteName: props.siteName,
        active: props.active,
        items: props.items
        }) }}
        <h1 class="site-head__title {{ c | randomColor }}">
            {{ props.title }} 
        </h1>
        {% if props.category or props.tags %}
        <aside class="site-head__meta">
            {% if props.category %}
            <h2 class="site-head__category">
                {% if props.category == "resurser" %}
                    <a href="/{{ props.category }}">{{ props.category }}</a>
                {% else %}
                    {{ props.category }}
                {% endif %}
                </h2>
            {% endif %}
            {% if props.tags %}
            <ul class="site-head__tags">
                {% for tag in props.tags | sort %}
                <li class="tag">
                    <a class="{{ c | randomColor }}" href="/tagg/{{ tag | slugify }}">
                        {{ tag }}
                    </a>
                </li>
                {% endfor %}
            </ul>
            {% endif %}
        </aside>
        {% endif %}
        {% if props.year %}
        <h2 id="{{ props.year }}" class="site-head__year post-list__title--year">{{ props.year }}</h2>
        {% endif %}
    </div>
</header>