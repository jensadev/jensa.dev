{% if postListItems.length > 0 %}
<div class="post-list flow">
  {% for item in postListItems %}
    {% set year = item.date | yearString %}
    {% if year === years[0] %}
      <h2 class="post-list--year" id="year-{{ year }}">{{ years.shift() }}</h2>
    {% endif %}
    <article class="flow">
        <header>
            <h2>
                <a href="{{ item.url }}">{{ item.data.title }}</a>
            </h2>
            <time datetime="{{ item.date | htmlDateString }}">
                {{ item.date | frontDate }}
            </time>
        </header>
        <p>{{ item.data.summary | safe }}</p>
        <footer>
            {% if item.data.tags.length > 0 %}
            <ul class="tags">
                <li>{{ item.data.category | safe }}</li>
                {% for tag in item.data.tags | sort %}
                <li>{{ tag }}</li>
                {% endfor %}
            </ul>
            {% endif %}
        </footer>
    </article>
    {% endfor %}
</div>
{% endif %}