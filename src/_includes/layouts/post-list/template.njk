<ol class="post-list site-grid__full">
    {% for item in props.items %}
    <li class="post-list__item">
        <div class="post-list__item--title">
            <h2 class="post-list__title">
                <a class="stretched-link" href="{{ item.url }}" rel="bookmark">{{
                    item.data.title
                    }}</a>
            </h2>
        </div>
        <div class="post-list__item--date">
            <time class="" datetime="{{ item.date | htmlDateString }}">
                {{ item.date | frontDate }}
            </time>
        </div>
        <div class="post-list__item--category">
            {{ item.data.category | safe }}
        </div>
    </li>
    {% endfor %}
</ol>