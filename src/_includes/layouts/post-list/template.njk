{% set colors = ["orange", "red", "blue", "yellow", "magenta", "green", "cyan"] %}
{% set years = [] %}
<ol class="post-list {{ 'site-grid__full' if not props.displayYears }}">
    {% for item in props.items %}
    {% if props.displayYears %}
        {% set year = item.date | yearString %}
        {% if years.indexOf(year) === -1 %}
            {% set years = years.concat(year) %}
            <li class="post-list__item--year full-bleed">
                <div class="container">
                    <h2 id="{{ year }}" class="post-list__title--year">{{ year }}</h2>
                </div>
            </li>
        {% endif %}
    {% endif %}
    <li class="post-list__item  post-list__item--{{ colors | random }}">
        <div class="post-list__item--category">
            <span>{{ item.data.category | safe }}</span>
             <time datetime="{{ item.date | htmlDateString }}">
                {{ item.date | frontDate }}
            </time>  
        </div>
        <div class="post-list__item--title">
            <h2 class="post-list__title">
                <a class="stretched-link text-caps" href="{{ item.url }}" rel="bookmark">{{
                    item.data.title
                    }}</a>
            </h2>
        </div>
        <div class="post-list__item--date">

        </div>
        <div class="post-list__item--tags">
            {% if item.data.tags.length > 0 %}
                <ul>
                    {% for tag in item.data.tags | sort %}
                        <li>{{ tag }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </li>
    {% endfor %}
</ol>