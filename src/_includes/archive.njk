---
layout: base.njk
---

{% if collections.posts.length %}
  <section>
    <div class="container">
      <h2 class="post-list-title">Alla inl√§gg</h2>
      <ol class="post-list">
        {% for post in collections.posts | reverse %}
            <li>
              <h3>
                <a href="{{ post.url }}" rel="bookmark">{{ post.data.title }}</a>
              </h3>
              <p>
                <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
              </p>
            </li>
        {% endfor %}
      </ol>
    </div>
  </section>
{% endif %}

<script src="/js/sort.js"></script>