---
layout: base.njk
---
<article class="post">
    <header class="post-header">
        <div class="container">
            <h1 class="header-title" id="{{ title | slug }}">{{ title }}<a href="#{{ title | slug }}" class="anchor">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path d="M14.78 3.653a3.936 3.936 0 115.567 5.567l-3.627 3.627a3.936 3.936 0 01-5.88-.353.75.75 0 00-1.18.928 5.436 5.436 0 008.12.486l3.628-3.628a5.436 5.436 0 10-7.688-7.688l-3 3a.75.75 0 001.06 1.061l3-3z"></path><path d="M7.28 11.153a3.936 3.936 0 015.88.353.75.75 0 001.18-.928 5.436 5.436 0 00-8.12-.486L2.592 13.72a5.436 5.436 0 107.688 7.688l3-3a.75.75 0 10-1.06-1.06l-3 3a3.936 3.936 0 01-5.567-5.568l3.627-3.627z"></path></svg>
            </a></h1>
            <div>
                <p class="lead">
                {% if date %}
                    <time datetime="{{ date | htmlDateString }}" class="dt-published">{{ date | readableDate }}</time>
                {% endif %}
                <span>— {{ helpers.getReadingTime(content) }} minuters läsning</span>
                </p>
            </div>
        </div>
    </header>
    <div class="container">
        {{ content | safe }}
    </div>
    {% if tags %}
    <footer class="post-footer">
        <div class="container">
            <ul class="tag-list">
                {% for tag in tags %}
                <li class="tag-item">
                    <a href="/tags/{{ tag }}">{{ tag | capitalize }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
    </footer>
    {% endif %}
</article>