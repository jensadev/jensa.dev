{% extends 'pages/base.njk' %}

{% block content %}
<main id="main-content" tabindex="-1">
    <section class="content container flow">
        <p class="content__lead">Länkar och eventuell info om projekt jag har/är delaktig i.</p>
        {% if projectsData %}
        <ul class="project-list">
        {% for project in projectsData %}
            <li class="project-list__card flow">
                {% if project.thumb %}
                <img
                    src="/assets/thumbs/{{ project.thumb }}"
                    alt="Bild för projektet {{ project.title }}"/>
                {% endif %}
                <h3>{{ project.title }}</h3>
                <p>{{ project.description }}</p>
                <a href="{{ project.title | slug }}">
                    {{ project.title }}
                </a>
            </li>
        {% endfor %}
        </ul>
        {% endif %}
    </section>
</main>
{% endblock %}


