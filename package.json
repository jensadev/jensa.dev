    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "date-fns": "^4",
    "elasticlunr": "^0.9.5",
    "fast-glob": "^3.2.11",
    "html-minifier-terser": "^7.2.0",
    "i": "^0.3.7",
    "jsdom": "^25",
    "markdown-it": "^14",
    "markdown-it-abbr": "^2",
    "markdown-it-anchor": "^9",
    "markdown-it-attrs": "^4.1.6",
